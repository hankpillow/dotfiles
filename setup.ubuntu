#!/bin/bash


cp -f ubuntu/terminal/.profile ~/.profile

# brew
if [ -z "$(command -v brew)" ]; then
  echo 'Installing brew...'
	sh -c "$(curl -fsSL https://raw.githubusercontent.com/Linuxbrew/install/master/install.sh)"
fi

if [ "$1" == "install"  ];
then

  brew install \
    gcc \
    fzf

  echo -e "\nset rtp+=/home/linuxbrew/.linuxbrew/opt/fzf\n" >> ~/.vimrc
  $(brew --prefix)/opt/fzf/install

fi

source ~/.profile
