#!/bin/bash
# vim: ft=sh

[[ -f ~/.gitignore ]] && cp -v ~/.gitignore "$HOME/.gitignore.$(date +%s).bkp"
cp -v gitignore ~/.gitignore

[[ -f ~/.gitconfig ]] && cp -v ~/.gitconfig "$HOME/.gitconfig.$(date +%s).bkp"
cp -v gitconfig ~/.gitconfig

curl https://raw.githubusercontent.com/so-fancy/diff-so-fancy/master/third_party/build_fatpack/diff-so-fancy -o /usr/local/bin/diff-so-fancy
chmod +x /usr/local/bin/diff-so-fancy

